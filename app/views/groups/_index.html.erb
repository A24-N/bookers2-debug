<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_group_image(80,80) %></td>
        <td>
          <%= link_to group_path(group) do %>
            <%= group.name %>
          <% end %>
        </td>
        <td><%= group.introduction %></td>
        <td><%= group.users.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>