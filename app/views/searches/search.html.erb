<div class="container">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
    <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @nbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% if @range == "User" %>
        <h2><%= @range %>s search for "<%= @word %>"</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Introduction</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(50,50) %></td>
                <td><%= user.name %></td>
                <td><%= user.introduction %></td>
                <th><%= link_to "Show",user_path(user) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
        <h2><%= @range %>s search for "<%= @word %>"</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.get_profile_image(50,50) %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <th><%= link_to "Show",book_path(book) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>