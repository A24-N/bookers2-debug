<div class="container">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
    <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @nbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% if @range == "User" %>
        <h2><%= @range %>s search for "<%= @word %>"</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Introduction</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(50,50) %></td>
                <td><%= user.name %></td>
                <td><%= user.introduction %></td>
                <th><%= link_to "Show",user_path(user) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
        <h2><%= @range %>s search for "<%= @word %>"</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th>Tag</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to(book.user) do %>
                  <%= image_tag book.user.get_profile_image(50,50) %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book, class: "book_#{book.id}", data: {"turbolinks" => false} %></td>
                <td><%= book.body %></td>
                <td><%= link_to book.tag, search_path(tag: book.tag) %></td>
                <td id="favorite_buttons_<%= book.id %>">
                  <%= render 'favorites/favorite-btn', book: book %>
                </td>
                <td>
                  <p>コメント数：<%= book.book_comments.count %></p>
                </td>
                <td>
                  <div id="rate_<%= book.id %>"></div>
                  <script>
                    $('#rate_<%= book.id %>').empty();
                    $(document).on('turbolinks:load', function() {
                      let raty_<%= book.id %> = document.querySelector('#rate_<%= book.id %>');
                      rate_<%= book.id %>.innerHTML = ""
                      let option_<%= book.id %> = {
                        starOff   : '<%= asset_path('star-off.png') %>',
                        starOn    : '<%= asset_path('star-on.png') %>',
                        readOnly: true,
                        score: <%= book.star %>,
                      };
                      raty(raty_<%= book.id %> ,option_<%= book.id %>);
                    });
                  </script>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>