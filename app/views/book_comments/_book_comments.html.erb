        <table>
        <% book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= link_to(book.user) do %>
                <%= image_tag book_comment.user.get_profile_image(50,50) %><br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
            <% if current_user.id == book_comment.user_id %>
            <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: 'btn btn-danger btn-sm', "data-confirm" => "本当に消しますか？", remote: true %> </td>
            <% end %>
          </tr>
        <% end %>
        </table>












