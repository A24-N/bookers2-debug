<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to book.title, book, class: "book_#{book.id}", data: {"turbolinks" => false} %></td>
        <td><%= book.body %></td>
        <% if book.tag != nil %>
          <td><%= link_to book.tag, book %></td>
        <% else %>
          <td></td>
        <% end %>
        <td id="favorite_buttons_<%= book.id %>">
          <%= render 'favorites/favorite-btn', book: book %>
        </td>

        <td>
          <p>コメント数：<%= book.book_comments.count %></p>
        </td>
        <td>
          <div id="rate_<%= book.id %>"></div>
          <script>
            $(document).on('turbolinks:load', function() {
              let raty_<%= book.id %> = document.querySelector('#rate_<%= book.id %>');
              rate_<%= book.id %>.innerHTML = ""
              let option_<%= book.id %> = {
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                readOnly: true,
                score: <%= book.star %>,
              };
              raty(raty_<%= book.id %> ,option_<%= book.id %>);
            });
          </script>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

