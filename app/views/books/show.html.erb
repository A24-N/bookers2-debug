<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @nbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <% if @book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book.id), method: :delete do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(@book.id), method: :post do %>
                  ♡<%= @book.favorites.count %>
                <% end %>
              </td>
            <% end %>
            <td><p>コメント件数：<%= @book.book_comments.count %></p></td>


          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>

      <div>
        <table>
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= link_to(@book.user) do %>
                <%= image_tag book_comment.user.get_profile_image, size:'50x50' %><br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
            <% if current_user.id == book_comment.user_id %>
            <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: 'btn btn-danger btn-sm', "data-confirm" => "本当に消しますか？" %> </td>
            <% end %>
          </tr>
        <% end %>
        </table>
      </div>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows:5, style: "width:100%", placeholder: "コメントをここに", class: "mt-3" %><br>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>